class Solution {
public:
    int maximumScore(int a, int b, int c) {
        priority_queue<int>pq;
        pq.push(a);
        pq.push(b);
        pq.push(c);
        int res=0;
        while(pq.size()>=2)
        {
            auto a= pq.top();
            pq.top();
             auto b= pq.top();
            pq.top();
            res++;
            a--,b--;
            if(a)pq.push(a);
            if(b)pq.push(b);
        }
        return res;
    }
