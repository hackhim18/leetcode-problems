class Solution {
public:
    int balancedStringSplit(string s) {
        int l_count=0,r_count=0,ans=0;
        int n=s.length();
        for(int i=0;i<n;i++) {
         if(s[i]=='L') l_count++;
         else r_count++;
         if(l_count==r_count) 
         {
             ans++;
             l_count=0;
             r_count=0;
         }
        }
        return ans;
    }
};
