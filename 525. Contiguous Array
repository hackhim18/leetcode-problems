class Solution {
public:
    int findMaxLength(vector<int>& nums) {
        map<int,int> mp;
        for(int i=0;i<nums.size();i++){
            if(nums[i]==0){
                nums[i]=-1;
            }
        }
        for(int i=1;i<nums.size();i++){
            nums[i]+=nums[i-1];
        }
        int ans=0;
        for(int i=0;i<nums.size();i++){
            if(nums[i]==0){
                ans=max(ans,i+1);
            }
            else{
                if(mp.find(nums[i])!=mp.end()){
                    ans=max(ans,i-mp[nums[i]]);
                }
                else{
                    mp[nums[i]]=i;
                }
            }
        }
        return ans;
    }
};
